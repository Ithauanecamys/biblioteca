<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Livros</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <div class="container">
    <div class="card">
      <h2>Livros</h2>
      <a href="/livros/novo" class="btn btn-add">+ Novo Livro</a>

      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Autor</th>
            <th>Ano</th>
            <th>Exemplares</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% if (livros.length === 0) { %>
            <tr><td colspan="6" style="text-align:center; color:#999;">Nenhum livro.</td></tr>
          <% } else { %>
            <% livros.forEach(l => { %>
              <tr>
                <td><%= l.id %></td>
                <td><%= l.titulo %></td>
                <td><%= l.autor %></td>
                <td><%= l.ano || '—' %></td>
                <td><strong style="color: <%= l.exemplares > 0 ? '#27ae60' : '#e74c3c' %>;"><%= l.exemplares %></strong></td>
                <td>
                  <a href="/livros/editar/<%= l.id %>" class="btn btn-edit">Editar</a>
                  <form method="POST" action="/livros/excluir/<%= l.id %>" style="display:inline;">
                    <button type="submit" class="btn btn-delete" onclick="return confirm('Excluir?')">Excluir</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Seta de voltar -->
  <a href="/dashboard" class="back-arrow" title="Voltar"></a>
</body>
</html>
