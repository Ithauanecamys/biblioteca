<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Livros</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <div class="container">
    <div class="card">
      <h2>Livros</h2>

      <!-- BOTÃO DE NOVO LIVRO: SÓ PARA ADMIN -->
      <% if (usuarioLogado.tipo === 'admin') { %>
        <a href="/livros/novo" class="btn btn-add">+ Novo Livro</a>
      <% } %>

      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Autor</th>
            <th>Ano</th>
            <th>Exemplares</th>
            <% if (usuarioLogado.tipo === 'admin') { %>
              <th>Ações</th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% if (livros.length === 0) { %>
            <tr>
              <td colspan="<%= usuarioLogado.tipo === 'admin' ? 6 : 5 %>" style="text-align:center; color:#999; padding:25px;">
                Nenhum livro cadastrado.
              </td>
            </tr>
          <% } else { %>
            <% livros.forEach(l => { %>
              <tr>
                <td><strong>#<%= l.id %></strong></td>
                <td><%= l.titulo %></td>
                <td><%= l.autor %></td>
                <td><%= l.ano || '—' %></td>
                <td>
                  <strong style="color: <%= l.exemplares > 0 ? '#27ae60' : '#e74c3c' %>;">
                    <%= l.exemplares %> disponível(is)
                  </strong>
                </td>
                <% if (usuarioLogado.tipo === 'admin') { %>
                  <td>
                    <a href="/livros/editar/<%= l.id %>" class="btn btn-edit">Editar</a>
                    <form method="POST" action="/livros/excluir/<%= l.id %>" style="display:inline;">
                      <button type="submit" class="btn btn-delete" onclick="return confirm('Excluir livro?')">
                        Excluir
                      </button>
                    </form>
                  </td>
                <% } %>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Seta fixa no canto inferior esquerdo (sem texto) -->
  <a href="/dashboard" class="back-arrow" title="Voltar ao Dashboard"></a>
</body>
</html>
