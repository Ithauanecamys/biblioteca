<%- include('../partials/header') %>

<h2>Editar Livro</h2>

<form method="POST" action="/livros/editar">
  <input type="hidden" name="id" value="1" />

  <label>Título:</label>
  <input type="text" name="titulo" value="Dom Casmurro" required /><br><br>

  <label>Autor:</label>
  <input type="text" name="autor" value="Machado de Assis" required /><br><br>

  <label>Ano:</label>
  <input type="number" name="ano" value="1899" required /><br><br>

  <label>Status:</label>
  <select name="status">
    <option value="Disponível">Disponível</option>
    <option value="Emprestado">Emprestado</option>
  </select><br><br>

  <button type="submit">Salvar Alterações</button>
</form>

<a href="/livros/listar">Voltar</a>

