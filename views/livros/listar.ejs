<%- include('../partials/header') %>

<h1>Livros Cadastrados</h1>

<table>
  <tr>
    <th>ID</th><th>Título</th><th>Autor</th><th>Ano</th><th>Status</th><th>Ações</th>
  </tr>
  <% livros.forEach(l => { %>
    <tr>
      <td><%= l.id %></td>
      <td><%= l.titulo %></td>
      <td><%= l.autor %></td>
      <td><%= l.ano %></td>
      <td><%= l.status %></td>
      <td><a href="/livros/editar?id=<%= l.id %>">Editar</a></td>
    </tr>
  <% }) %>
</table>

<a href="/livros/cadastrar">Cadastrar Novo Livro</a>

