<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Empréstimos</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <div class="container">
    <div class="card">
      <h2>Empréstimos</h2>

      <!-- ================== FORMULÁRIO: SÓ PARA ADMIN ================== -->
      <% if (usuarioLogado.tipo === 'admin') { %>
        <div style="background:#f8f9fa; padding:25px; border-radius:12px; margin-bottom:25px;">
          <h3 style="margin-bottom:20px; color:#333; text-align:center;">Novo Empréstimo</h3>
          <form method="POST" action="/emprestimos">
            <div style="display:grid; gap:18px; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));">
              
              <!-- Usuário -->
              <div>
                <label style="display:block; margin-bottom:8px; font-weight:600; color:#333;">Usuário</label>
                <select name="usuario_id" required style="width:100%; padding:12px; border:1px solid #ddd; border-radius:8px; font-size:15px;">
                  <option value="">Selecione...</option>
                  <% usuarios.forEach(u => { %>
                    <option value="<%= u.id %>"><%= u.nome %></option>
                  <% }) %>
                </select>
              </div>

              <!-- Livro -->
              <div>
                <label style="display:block; margin-bottom:8px; font-weight:600; color:#333;">Livro Disponível</label>
                <select name="livro_id" required style="width:100%; padding:12px; border:1px solid #ddd; border-radius:8px; font-size:15px;">
                  <option value="">Selecione...</option>
                  <% livros.forEach(l => { %>
                    <option value="<%= l.id %>">
                      <%= l.titulo %> — <%= l.exemplares %> em estoque
                    </option>
                  <% }) %>
                </select>
              </div>

              <!-- Data Empréstimo -->
              <div>
                <label style="display:block; margin-bottom:8px; font-weight:600; color:#333;">Data do Empréstimo</label>
                <input 
                  type="date" 
                  name="data_emprestimo" 
                  required 
                  style="width:100%; padding:12px; border:1px solid #ddd; border-radius:8px; font-size:15px;"
                  value="<%= new Date().toISOString().split('T')[0] %>"
                />
              </div>

              <!-- Data Prevista de Devolução -->
              <div>
                <label style="display:block; margin-bottom:8px; font-weight:600; color:#333;">Previsão de Devolução</label>
                <input 
                  type="date" 
                  name="data_devolucao_prevista" 
                  required 
                  style="width:100%; padding:12px; border:1px solid #ddd; border-radius:8px; font-size:15px;"
                  min="<%= new Date().toISOString().split('T')[0] %>"
                />
              </div>

            </div>

            <div style="margin-top:20px; text-align:center;">
              <button type="submit" class="btn" style="background:#27ae60; color:white; padding:14px 30px; font-size:16px; font-weight:600;">
                Confirmar Empréstimo
              </button>
            </div>
          </form>
        </div>
      <% } else { %>
        <p style="background:#e8f5e8; color:#27ae60; padding:15px; border-radius:8px; margin-bottom:25px; font-weight:500; text-align:center;">
          Você pode visualizar apenas os seus empréstimos abaixo.
        </p>
      <% } %>

      <!-- ================== TABELA DE EMPRÉSTIMOS ================== -->
      <h3 style="margin-bottom:15px; color:#333; text-align:center;">
        <% if (usuarioLogado.tipo === 'admin') { %>
          Todos os Empréstimos
        <% } else { %>
          Seus Empréstimos
        <% } %>
      </h3>

      <table class="table">
        <thead>
          <tr>
            <% if (usuarioLogado.tipo === 'admin') { %>
              <th>ID</th>
              <th>Usuário</th>
            <% } %>
            <th>Livro</th>
            <th>Empréstimo</th>
            <th>Previsão</th>
            <th>Devolvido em</th>
            <th>Status</th>
            <% if (usuarioLogado.tipo === 'admin') { %>
              <th>Ações</th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% if (emprestimos.length === 0) { %>
            <tr>
              <td colspan="<%= usuarioLogado.tipo === 'admin' ? 8 : 6 %>" style="text-align:center; color:#999; padding:25px;">
                <% if (usuarioLogado.tipo === 'admin') { %>
                  Nenhum empréstimo registrado.
                <% } else { %>
                  Você ainda não possui empréstimos.
                <% } %>
              </td>
            </tr>
          <% } else { %>
            <% emprestimos.forEach(e => { %>
              <tr>
                <% if (usuarioLogado.tipo === 'admin') { %>
                  <td><strong>#<%= e.id %></strong></td>
                  <td><%= e.usuario_nome %></td>
                <% } %>
                <td><strong><%= e.livro_titulo %></strong></td>
                <td><span style="color:#27ae60; font-weight:600;"><%= new Date(e.data_emprestimo).toLocaleDateString('pt-BR') %></span></td>
                <td><em style="color:#3498db;"><%= e.data_devolucao_prevista ? new Date(e.data_devolucao_prevista).toLocaleDateString('pt-BR') : '—' %></em></td>
                <td>
                  <% if (e.data_devolucao) { %>
                    <span style="color:#7f8c8d;"><%= new Date(e.data_devolucao).toLocaleDateString('pt-BR') %></span>
                  <% } else { %>
                    <em style="color:#e67e22;">Pendente</em>
                  <% } %>
                </td>
                <td>
                  <span class="status <%= e.data_devolucao ? 'devolvido' : 'pendente' %>">
                    <%= e.data_devolucao ? 'Devolvido' : 'Ativo' %>
                  </span>
                </td>
                <% if (usuarioLogado.tipo === 'admin') { %>
                  <td>
                    <% if (!e.data_devolucao) { %>
                      <form method="POST" action="/emprestimos/devolver/<%= e.id %>" style="display:inline;">
                        <button type="submit" class="btn btn-return">Devolver</button>
                      </form>
                    <% } %>
                    <form method="POST" action="/emprestimos/excluir/<%= e.id %>" style="display:inline;">
                      <button type="submit" class="btn btn-delete" onclick="return confirm('Excluir empréstimo?')">
                        Excluir
                      </button>
                    </form>
                  </td>
                <% } %>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Seta fixa no canto inferior esquerdo (sem texto) -->
  <a href="/dashboard" class="back-arrow" title="Voltar ao Dashboard"></a>
</body>
</html>
