<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Empréstimos</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <div class="container">
    <div class="card">
      <h2>Empréstimos</h2>

      <div style="background:#f8f9fa; padding:20px; border-radius:10px; margin-bottom:20px;">
        <form method="POST" action="/emprestimos">
          <div style="display:flex; gap:15px; flex-wrap:wrap;">
            <select name="usuario_id" required style="flex:1; min-width:200px; padding:12px; border:1px solid #ddd; border-radius:8px;">
              <option value="">Selecione o usuário</option>
              <% usuarios.forEach(u => { %>
                <option value="<%= u.id %>"><%= u.nome %></option>
              <% }) %>
            </select>
            <select name="livro_id" required style="flex:1; min-width:200px; padding:12px; border:1px solid #ddd; border-radius:8px;">
              <option value="">Selecione o livro</option>
              <% livros.forEach(l => { %>
                <option value="<%= l.id %>"><%= l.titulo %> (<%= l.exemplares %> disp.)</option>
              <% }) %>
            </select>
            <button type="submit" class="btn" style="background:#27ae60; color:white;">Fazer Empréstimo</button>
          </div>
        </form>
      </div>

      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Usuário</th>
            <th>Livro</th>
            <th>Empréstimo</th>
            <th>Devolução</th>
            <th>Status</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% if (emprestimos.length === 0) { %>
            <tr><td colspan="7" style="text-align:center; color:#999;">Nenhum empréstimo.</td></tr>
          <% } else { %>
            <% emprestimos.forEach(e => { %>
              <tr>
                <td><%= e.id %></td>
                <td><%= e.usuario_nome %></td>
                <td><%= e.livro_titulo %></td>
                <td><%= new Date(e.data_emprestimo).toLocaleDateString('pt-BR') %></td>
                <td><%= e.data_devolucao ? new Date(e.data_devolucao).toLocaleDateString('pt-BR') : '—' %></td>
                <td>
                  <span class="status <%= e.data_devolucao ? 'devolvido' : 'pendente' %>">
                    <%= e.data_devolucao ? 'Devolvido' : 'Pendente' %>
                  </span>
                </td>
                <td>
                  <% if (!e.data_devolucao) { %>
                    <form method="POST" action="/emprestimos/devolver/<%= e.id %>" style="display:inline;">
                      <button type="submit" class="btn btn-return">Devolver</button>
                    </form>
                  <% } %>
                  <form method="POST" action="/emprestimos/excluir/<%= e.id %>" style="display:inline;">
                    <button type="submit" class="btn btn-delete" onclick="return confirm('Excluir?')">Excluir</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>

      <a href="/dashboard" class="voltar">Voltar</a>
    </div>
  </div>
</body>
</html>
