<%- include('../partials/header') %> <% title = 'Novo Empréstimo' %>

<form method="POST" action="/emprestimos/cadastrar?sessao=logado">
  <label>Usuário:</label><br>
  <select name="usuario_id" required>
    <% usuarios.forEach(u => { %>
      <option value="<%= u.id %>"><%= u.nome %></option>
    <% }) %>
  </select><br><br>

  <label>Livro Disponível:</label><br>
  <select name="livro_id" required>
    <% livros.forEach(l => { %>
      <option value="<%= l.id %>"><%= l.titulo %></option>
    <% }) %>
  </select><br><br>

  <label>Data:</label><br>
  <input type="date" name="data_emprestimo" required /><br><br>

  <button>Realizar Empréstimo</button>
  <a href="/emprestimos?sessao=logado">Cancelar</a>
</form>

<%- include('../partials/footer') %>
