<!DOCTYPE html>
<html><head><title>Usuários</title><link rel="stylesheet" href="/style.css"></head><body>
  <div class="login-container">
    <h1>Usuários</h1>
    <a href="/usuarios/novo" style="display: inline-block; margin-bottom: 15px; color: #667eea;">+ Novo Usuário</a>
    <table border="1" width="100%" style="border-collapse: collapse;">
      <tr><th>ID</th><th>Nome</th><th>Email</th><th>Tipo</th><th>Ações</th></tr>
      <% usuarios.forEach(u => { %>
        <tr>
          <td><%= u.id %></td>
          <td><%= u.nome %></td>
          <td><%= u.email %></td>
          <td><%= u.tipo %></td>
          <td>
            <a href="/usuarios/editar/<%= u.id %>">Editar</a>
            <form method="POST" action="/usuarios/excluir/<%= u.id %>" style="display:inline;">
              <button type="submit" onclick="return confirm('Excluir?')" style="background: #e74c3c; color: white; border: none; padding: 5px 10px; border-radius: 5px;">Excluir</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </table>
    <a href="/dashboard">Voltar</a>
  </div>
</body></html>
