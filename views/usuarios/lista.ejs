<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Usuários</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <div class="container">
    <div class="card">
      <h2>Usuários</h2>
      <a href="/usuarios/novo" class="btn btn-add">+ Novo Usuário</a>

      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Tipo</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% if (usuarios.length === 0) { %>
            <tr><td colspan="5" style="text-align:center; color:#999;">Nenhum usuário.</td></tr>
          <% } else { %>
            <% usuarios.forEach(u => { %>
              <tr>
                <td><%= u.id %></td>
                <td><%= u.nome %></td>
                <td><%= u.email %></td>
                <td><strong style="color: <%= u.tipo === 'admin' ? '#9b59b6' : '#3498db' %>;"><%= u.tipo %></strong></td>
                <td>
                  <a href="/usuarios/editar/<%= u.id %>" class="btn btn-edit">Editar</a>
                  <form method="POST" action="/usuarios/excluir/<%= u.id %>" style="display:inline;">
                    <button type="submit" class="btn btn-delete" onclick="return confirm('Excluir?')">Excluir</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Seta de voltar -->
  <a href="/dashboard" class="back-arrow">Back</a>
</body>
</html>
